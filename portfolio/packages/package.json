    "@babel/cli": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
