{
  "name": "semantic-minification-suite",
  "version": "1.0.0",
  "description": "Professional-grade semantic minification suite for React/React Native projects",
  "private": true,
  "workspaces": [
    "semantic-minifier-core",
    "metro-plugin-semantic-minification",
    "optimization-devtool"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
